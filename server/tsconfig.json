{
  "compilerOptions": {
    "target": "es2017",                         
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "strict": true,                          
    "strictFunctionTypes": true,           
    "strictPropertyInitialization": false,  
    "esModuleInterop": true,                  
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true  
  }
}
